

<br>

<% @goods.each do |good| %>


  <%= image_tag(good.thumbnail.variant(resize: "320x495")) %>
  <br>
  <%= "Vente #{good.property_type} " %>
  <br>
  <%= "Le #{good.created_at.strftime("%-d/%-m/%-y")} à #{good.location.capitalize}" %>
  <br>
  <%= good.user.name.capitalize %>
  <br>
  <%= "Vendeur : #{good.nickname.capitalize} #{good.name.capitalize[0]}" %>
  <br>
  <!-- ajouter ici le nom de l'agence en faisant good.user.nom_de_ta_variable_avec_le_nom_d_agence -->
  <% object = [] %>
  <% seller = Review.find(good.seller_id) %>
  <% buyer = Review.find(good.buyer_id) %>
  <% object << seller if seller && seller.is_visible && seller.token == 'USED' %>
  <% object << buyer if buyer && buyer.is_visible && buyer.token == 'USED' %>
  <% review = object.sort {|a, b| a[:stars] <=> b[:stars]}.last %>
  <%= render "stars", seller_stars: review.stars, buyer_stars: review.stars %>



  <br>

  <%= review.testimony %>

  <br>

  <%= "Acheteur : nom de l'acheteur + étoiles + commentaire de l'acheteur " %>
  <br>

  <span class="row">  <%= link_to details_good_path(good), class:"button is-info is-small" do %>détail<% end %>
  </span> <br> <br>


<% end %>
