
<%= simple_form_for(@good) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<section class="section">
  <div class="container">
    <h1></h1>
    <hr>
    <main>
      <div class="field">
          <div class="control">
            <%= f.input :title, required: true %>
          </div>
      </div>
      <div class="control">

      <div class="field">
        <div class="control">
          <%= f.input :is_seller, required: true %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :property_type, as: :radio_buttons, collection:["Maison", "Appartement", "Bureaux"], required: true %>



        </div>
      </div>

      <div class="field">
        <div class="control">

        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :location, required: true %>
        </div>
      </div>

      <!-- champs non retenus
        <% f.input :name, required: false %>
        <% f.input :nickname, required: false %>
        <% f.input :tel, required: false %>
        <% f.input :email, required: false %> -->

        <div class="field">
        <div class="control">
          <div class="file has-name is boxed">
            <label class="file-label">
              <%= f.input :thumbnail, as: :file, required: true, input_html: { class: "file-input"}, wrapper: false, label: false  %>
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fa fa-upload"></i>
                </span>
                <span class="file-label">
                  Choose an image
                </span>
              </span>
            </label>
          </div>
        </div>
      </div>

    </main>

    <div class="form-actions">
      <%= f.button :submit, class:"button is-link" %>
    </div>
  </div>
</section>


<% end %>
