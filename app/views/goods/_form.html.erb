
<%= simple_form_for(@good) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, required: true %>
    <%= f.input :name, required: true %>
    <%= f.input :nickname, required: true %>
    <%= f.input :is_seller, required: true %>
    <%= f.input :property_type, required: true %>
    <%= f.input :location, required: true %>
    <%= f.input :tel, required: true %>
    <%= f.input :email, required: true %>
    <div class="field">
    <div class="control">
      <div class="file">
        <label class="file-label">
          <%= f.input :thumbnail, as: :file, required: true, input_html: { class: "file-input" }, wrapper: false, label: false  %>
          <span class="file-cta">
            <span class="file-icon">
              <i class="fa fa-upload"></i>
            </span>
            <span class="file-label">
              Choose an image
            </span>
          </span>
        </label>
      </div>
    </div>
  </div>



  <div class="form-actions">
    <%= f.button :submit, class:"button is-link" %>
  </div>
<% end %>
