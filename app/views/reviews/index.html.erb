<% if @seller.token != "USED" %>
  <%= link_to "seller_form" ,good_review_path(@good, @good.seller, token: @good.seller.token), class: "button is-info"  %>
  <%= mail_to("", "send mail to seller", {subject: 'Invitation to complete form', body: "http://localhost:3000/goods/#{@good.id}/reviews/#{@seller.id}?token=#{@seller.token}", class: "button is-info"}) %>
<% elsif @seller.token == "USED" %>
  <%= link_to good_review_path(@good, @seller), method: :patch do %>
    <p>Make <%= @seller.is_visible ? "invisible" : "visible" %></p>
  <% end %>
<% end %>
<% if @buyer.token != "USED" %>
  <%= link_to "buyer_form" ,good_review_path(@good, @good.buyer, token: @good.buyer.token), class: "button is-info"  %>
  <%= mail_to("", "send mail to buyer", { subject: 'Invitation to complete form', body: "http://localhost:3000/goods/#{@good.id}/reviews/#{@buyer.id}?token=#{@buyer.token}", class: "button is-info"} ) %>
<% elsif @buyer.token == "USED" %>
  <%= link_to good_review_path(@good, @buyer), method: :patch do %>
    <p>Make <%= @buyer.is_visible ? "invisible" : "visible" %></p>
  <% end %>
<% end %>
